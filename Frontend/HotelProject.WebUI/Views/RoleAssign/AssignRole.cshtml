@model List<HotelProject.WebUI.Models.Role.RoleAssignViewModel>

@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h3>Role Atama Alanı</h3>

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId" />
            <input type="hidden" asp-for="@Model[i].RoleName" />
            <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input" />
            <label class="form-check-label" for="@Model[i].RoleExist">@Model[i].RoleName</label>
        </div>
    }
    <br />
    <button class="btn mb-1 btn-rounded btn-outline-success">Kullanıcı İçin Roller Güncelle</button>
    <button class="btn mb-1 btn-rounded btn-outline-primary" href="/RoleAssign/Index/">Geri Dön</button>
</form>
